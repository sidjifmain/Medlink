<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="40dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_color">


        <Button
            android:id="@+id/filter_apply_button"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_blue"
            android:text="Apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/cardiologist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="173dp"
            android:text="Cardiologist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/neurologist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Neurologist"
            app:layout_constraintEnd_toEndOf="@+id/cardiologist"
            app:layout_constraintStart_toStartOf="@+id/cardiologist"
            app:layout_constraintTop_toBottomOf="@+id/cardiologist" />

        <CheckBox
            android:id="@+id/psychiatrist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Psychiatrist"
            app:layout_constraintEnd_toEndOf="@+id/neurologist"
            app:layout_constraintStart_toStartOf="@+id/neurologist"
            app:layout_constraintTop_toBottomOf="@+id/neurologist" />

        <CheckBox
            android:id="@+id/surgeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Surgeon"
            app:layout_constraintEnd_toEndOf="@+id/psychiatrist"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/psychiatrist"
            app:layout_constraintTop_toBottomOf="@+id/psychiatrist" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>